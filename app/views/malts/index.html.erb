<p id="notice"><%= notice %></p>

<h1>Malts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ebcmin</th>
      <th>Ebcmax</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @malts.each do |malt| %>
      <tr>
        <td><%= malt.name %></td>
        <td><%= malt.ebcmin %></td>
        <td><%= malt.ebcmax %></td>
        <td><%= link_to 'Show', malt %></td>
        <td><%= link_to 'Edit', edit_malt_path(malt) %></td>
        <td><%= link_to 'Destroy', malt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

